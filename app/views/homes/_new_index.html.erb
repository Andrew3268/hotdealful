<div class="web_box clearfix">

  <div class="left">
    <%= render '/shared/left' %>
  </div>

  <div class="right">
    <div class="index_wrap">
      <header><%= render 'shared/header_index' %></header>
       <% if current_user && current_user.admin %>
          <div class="admin_btn">
            <%= link_to 'New Coupon', new_coupon_path %>
            <%= link_to 'New Post', new_post_path %>
            <%= link_to 'New Home', new_home_path %>
            <a href="/bridges/delete_coupons">Delete Coupons</a>
            <a href="/bridges/delete_hotdeals">Delete Hotdeals</a>
            <a href="/bridges/delete_shoes">Delete Shoes</a>
            <a href="/coupons">Coupon's Home</a>
            <a href="/deals">Deals</a>
            <a href="/bridges/random_deals">Random Deals</a>
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
          </div>  
        <% end %>

      <div class="search_hero clearfix">
          <%= render 'bridges/only_coupon' %>
          <div class="scroll-downs">
            <div class="mousey">
              <div class="scroller"></div>
            </div>
          </div>
      </div>

      <div class="ctn_box">

        <div class="special_exhibition clearfix">
          <div class="spe_top">
            <a target="_blank" href="https://amzn.to/3Lg0Bti"><img src="<%=asset_path 'banner_top.png' %>" alt="amazon bose banner""></a>
          </div>

          <div class="spe_left">
            <a target="_blank" href="https://amzn.to/3HBd2xt"><img src="<%=asset_path 'banner_left.png' %>" alt="amazon adidas banner""></a>
          </div>

          <div class="spe_right">
            <a target="_blank" href="https://amzn.to/3utkYxa"><img src="<%=asset_path 'banner_right.png' %>" alt="amazon fitbit banner""></a>
          </div>          
        </div>

        <div class="pic_deal clearfix">
          <h2 class="line-title">Today's Found::Amazon Deals</h2><br>
          <%= render '/homes/deals' %>
        </div>
        <a class="more_btn" href="/bridges/deal_section">More +</a>

        <!-- <div class="middle_event">
          <a target="_blank" href="#n"><img src="https://images.unsplash.com/photo-1517602302552-471fe67acf66?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Nnx8YnJhbmR8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60"></a>
        </div> -->
        <div class="deals_box"><%= render '/coupons/online_deals' %></div>


        <div class="pic_deal clearfix">
          <h2 class="line-title">Today's Found::Amazon Promo Codes</h2><br>
          <%= render '/homes/coupons' %>
        </div>
        <a class="more_btn" href="/bridges/coupon_section">More +</a>


        <div class="trending_box clearfix">
          <h2 class="line-title">Popular Codes & Deals of Amazon</h2><br>
          <div class="trending"><%= render '/coupons/trending' %></div>
        </div>
       
      </div>
    </div>

  </div>

</div>