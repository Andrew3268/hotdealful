<div class="card_box">
  <a href="/deals">
    <div class="img_box">
      <img class="deal_img" src="https://m.media-amazon.com/images/I/61dYwO-5fwL._AC_UL320_.jpg" alt="Amazon Prime">
    </div>
    <div class="inner">
      <p>Sneakers Deals</p>
    </div>
    <div class="upto">
      <em class="top">UP TO</em>
      <em class="bottom">60% OFF</em>
    </div> 
  </a>
</div>

<% @homes.each do |deals| %>
  <div class="card_box">
    <a href="/posts/hashtag/<%= deals.main_link %>">
      <div class="img_box">
        <img class="deal_img" src="<%= deals.main_image %>" alt="<%= deals.main_title %>">
      </div>
      <div class="inner">
        <p><%= deals.main_title %></p>
        
      </div>
      <div class="upto">
        <em class="top">UP TO</em>
        <em class="bottom"><span><%= deals.main_description %>%</span> OFF</em>
      </div> 
    </a>
    <% if current_user && current_user.admin %>
      <div class="admin">
        <%= link_to 'Edit', edit_home_path(deals) %>
        <%= link_to 'Destroy', deals, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>
<% end %>
