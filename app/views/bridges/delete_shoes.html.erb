<% if current_user && current_user.admin %>
  <header><%= render 'shared/header_index' %></header>

  <div class="destory_old_post">
    <p>Destory Shoes // <a href="/">Home</a></p>
    <table id="customers">
      <tr>
        <th>No.</th>
        <th>Title</th>
        <th>Posting Time</th>
        <th>Destroy</th>
      </tr>
        
        <% @deals.each_with_index do |deal, i| %>
          <tr>
            <td><p><%= i + 1 %></p></td>
            <td><p><%= deal.d_title %></p></td>
            <td><%= time_ago_in_words(deal.created_at) %> ago</td>
            <td><%= link_to 'Destroy', deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
          
    </table>
   
  </div>
<% end %>