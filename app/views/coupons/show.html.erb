                <p>Rating: <span><%= @coupon.c_rating %></span></p><p>Reviews: <span><%= @coupon.c_review_count %>+</span></p>
                <% if current_user && current_user.admin %><%= @coupon.c_rating %> <%= @coupon.c_review_count %>+<% end %>
              </div>            
            <% end %>
          </div>
