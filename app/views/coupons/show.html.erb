                <p>Rating: <span><%= @coupon.c_rating %></span></p><p>Reviews: <span><%= @coupon.c_review_count %>+</span></p>
              </div>            
            <% end %>
          </h2>
        </div>
        <!-- End Mobile -->

        <!-- For PC -->
        <div class="image-box clearfix">
          <img src="<%= @coupon.c_image %>" alt="<%= @coupon.c_title %>" title="<%= @coupon.c_title %>" />
        </div>

        <div class="inner-box clearfix">
