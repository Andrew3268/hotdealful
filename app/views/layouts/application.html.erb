<!-- search on show page -->
<script type="text/javascript">
  var elements = $('.modal-overlay, .modal');

  $('button.search_btn').click(function(){
      elements.addClass('active');
  });

  $('.close-modal').click(function(){
      elements.removeClass('active');
  });
</script>