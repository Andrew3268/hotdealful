<div class="hotdeal_form">
  <%= simple_form_for(@post) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="basic_info">
      <%= f.input :image %>
      <%= f.input :title %>
      <%= f.input :link %>
      <%= f.input :hashtag, label: "#online_deals #product_code ex)#100 #200..." %>
    </div>
    <div class="pricing clearfix">
      <%= f.input :was_price, label: "Original Price" %>
      <%= f.input :is_price, label: "is_price" %>
      <%= f.input :spare_61, label: "Extra Coupon(%)" %>
      <%= f.input :spare_62, label: "Extra Coupon($)" %>
      <!-- <%= f.input :pct, label: "pct" %> -->
      <%= f.input :rating %>
      <%= f.input :review_count %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>