<header><%= render 'shared/header_index' %></header>

<div class="wrap">

  <div class="index_wrapper">

    <div class="where-hashtag">
      <% if params[:name].present? %>
        <h2 class="line-title">#<%= params[:name] %></h2>
        <!-- <p><span class="hashtag-through">#<%= params[:name] %></span></p> -->
      <% end %>
    </div>

    <div class="cards">
      <% @posts.each do |post| %>
          <div class=" card [ is-collapsed ] ">
            <div class="card__inner [ js-expander ]">
              <div class="image_box">
                <%= link_to image_tag(post.image, alt: post.title, title: post.title), post %>
              </div>
              <div class="inner">
            
                <% if post.rating.present? %>
                  <div class="ratings_box">
                    <span class="rating">Rating: <%= post.rating %></span>
                    <span class="review">Review: <%= post.review_count %> +</span>
                    <% if current_user && current_user.admin %>
                    <% end %>
                  </div>
                <% end %>

                <p><%= post.title %></p>
                <% hotdeal_pct = 0 %>
                <% hotdeal_pct =  (post.was_price.to_f - post.is_price.to_f) / post.was_price.to_f * 100 %>
                <em><%= number_to_currency(post.is_price) %><span class="was_price"><%= number_to_currency(post.was_price) %></span><span class="pct"><%= number_to_percentage(hotdeal_pct, precision: 0) %> off</span></em>
                

                <% if current_user && current_user.admin %>
                  <div class="admin_controller">
                    <%= link_to 'Edit', edit_post_path(post) %>
                    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </div>
                <% end %>

              </div>
              <% if post.spare_61.present? or post.spare_62.present? %>
                <div class="extra_coupon"><p>+ Extra coupon</p></div>
              <% end %>
            </div>

          </div><!-- card -->
      <% end %>
      
    </div>
  </div>

  <div class="back_btn_mobile">
    <button onclick="goBack()"><img class="go_back" src="<%=asset_path 'back_btn.png' %>" alt="뒤로가기" /></button>
    <script>
      function goBack() {
        window.history.back();
      }
    </script>
  </div>  

</div>

<div class="wrap">
  <%= raw pagy_nav(@pagy) %>
</div>





    
      
