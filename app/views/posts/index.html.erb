

<div class="post_index clearfix">
  <div class="wrap">

    <div class="index_left">
      <img src="https://mediaservice.retailmenot.com/ws/mediagroup/R22ASI6HQRE2BANLTBP57PD5EU?width=255&height=255" alt=""/><!-- amamzon logo -->

      <div class="finder">
        <%= render 'posts/finder' %>
      </div>

      <div class="categories">
        <%= render 'posts/categories' %>
      </div>
    </div>

    <div class="index_right">

      <% @posts.each do |post| %>
        <div class="card clearfix">
          <a target="_blank" href="<%= post.link %>">
            <div class="img_box">
              <img src="<%= post.image %>" alt="<%= post.title %>"/>
            </div>

            <div class="inner">
              <p>
                <% if post.promocode.present? %>
                  <span class="promocode">Promocode</span>
                <% else %>
                  <span class="sale">Onlne Sale</span>
                <% end %>
                <%= post.title %>
              </p>
              <span><em class="was_price"><%= number_to_currency(post.was_price) %></em><%= number_to_currency(post.is_price) %></span>
              <p class="codenum">Save $10 by code:<%= post.promocode %></p>
              <em class="see_detail"><%= link_to "See Deatil", post %></em>

              <%= link_to 'Edit', edit_post_path(post) %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>

            </div>

            <div class="btn_box">
              <a target="_blank"href="<%= post.link %>">Get This Deal</a>
            </div>
          </a>
        </div>
      <% end %>

